@model ToDoListMVC.Models.Work
@{
    ViewBag.Title = "Edit";
    Layout = "~/Shared/_LayoutPage1.cshtml";
}

<div class="container mt-5">
    <div class="card">
        <div class="card-header">
            Düzenleme Sayfası
        </div>
        <div class="card-body">
            @using (Html.BeginForm())
            {
                <div class="mb-3">
                    <div class="mb-2">
                        <strong>Yeni Görev İsmi</strong>
                    </div>
                    @Html.EditorFor(x => x.Title, new { htmlAttributes = new { @class = "form-control", @id = "Name" } })
                    @Html.ValidationMessageFor(x => x.Title, "", new { @class = "text-danger" })

                </div>
                <button type="submit">Değiştir</button>
            }
        </div>
    </div>
</div>

